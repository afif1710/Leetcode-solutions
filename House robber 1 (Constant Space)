class Solution {
public:
    int rob(vector<int>& nums) {
        int n = nums.size();

        int prevprev = 0;

        int prev = nums[0];
        
        for(int i = 2; i<=n; i++){
            int skip = prev;
            int steal = nums[i-1] + prevprev;

            int temp = max(skip, steal);

            prevprev = prev;
            prev = temp;
        }
        return prev;
    }
};
